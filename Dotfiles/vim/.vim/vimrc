set nocompatible

syntax on
" color acme

set background=dark
set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set incsearch
set viminfo=""
set ruler
set nowrap
set noswapfile
set encoding=utf-8 " displayed
set fileencoding=utf-8 " written

" https://stackoverflow.com/questions/1326998/enabling-italics-in-vim-syntax-highlighting-for-mac-terminal
let &t_ZH="\e[3m"
let &t_ZR="\e[23m"

autocmd FileType make set noexpandtab
